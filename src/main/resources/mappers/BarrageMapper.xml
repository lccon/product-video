<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cilicili.jz2.dao.BarrageMapper">
  <resultMap id="BaseResultMap" type="cilicili.jz2.domain.Barrage">
    <id property="id" column="id"/>
    <result property="userId" column="user_id"/>
    <result property="videoId" column="video_id"/>
    <result property="content" column="content"/>
    <result property="color" column="color"/>
    <result property="position" column="position"/>
    <result property="offtime" column="offtime"/>
    <result property="sendtime" column="sendtime"/>
    <result property="createDate" column="create_date"/>
    <result property="updateDate" column="update_date"/>
  </resultMap>

  <sql id="Base_Column_List">
    id, user_id, video_id, sendtime, content, color, offtime, position, create_date, update_date
  </sql>

  <select id="findBarrageList" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from barrages
    WHERE video_id = #{videoId}
  </select>

  <insert id="addBarrage" parameterType="cilicili.jz2.domain.Barrage">
    insert into barrages
    (id, user_id, video_id, sendtime, content, color, offtime, position, create_date)
    values
    (#{id}, #{userId}, #{videoId}, #{sendtime}, #{content}, #{color}, #{offtime}, #{position}, #{createDate})
  </insert>

  <update id="updateBarrage" parameterType="cilicili.jz2.domain.Barrage">
    update barrages
    <set>
      <if test="userId != null">
        user_id = #{userId},
      </if>
      <if test="videoId != null">
        video_id = #{videoId},
      </if>
      <if test="sendtime != null">
        sendtime = #{sendtime},
      </if>
      <if test="content != null">
        content = #{content},
      </if>
      <if test="color != null">
        color = #{color},
      </if>
      <if test="offtime != null">
        offtime = #{offtime},
      </if>
      <if test="position != null">
        position = #{position},
      </if>
      <if test="updateDate != null">
        update_date = #{updateDate},
      </if>
    </set>
    where id = #{id}
  </update>
</mapper>