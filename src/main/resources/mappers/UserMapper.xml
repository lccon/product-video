<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cilicili.jz2.dao.UserMapper">
  <resultMap id="BaseResultMap" type="cilicili.jz2.domain.User">
    <id property="id" column="id"/>
    <result property="username" column="username"/>
    <result property="password" column="password"/>
    <result property="identity" column="identity"/>
    <result property="createDate" column="create_date"/>
    <result property="updateDate" column="update_date"/>
  </resultMap>

  <sql id="Base_Column_List">
    id, username, password, identity, create_date, update_date
  </sql>

  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from users
    where id = #{id}
  </select>

  <insert id="addUser" parameterType="cilicili.jz2.domain.User">
    <selectKey keyProperty="id" resultType="java.lang.Integer"
               order="AFTER">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into users (id, username, password, identity, create_date)
    values (#{id}, #{username}, #{password}, #{identity}, #{createDate})
  </insert>

  <update id="updateByPrimaryKeySelective" parameterType="cilicili.jz2.domain.User">
    update users
    <set>
      <if test="username != null">
        username = #{username},
      </if>
      <if test="password != null">
        password = #{password},
      </if>
      <if test="identity != null">
        identity = #{identity},
      </if>
      <if test="updateDate != null">
        update_date = #{updateDate},
      </if>
    </set>
    where id = #{id}
  </update>

  <select id="getUserByUsernamePassword" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List"/>
    from users
    WHERE username = #{username}
    and password = #{password}
  </select>

  <select id="getUserByUsername" resultMap="BaseResultMap">
    SELECT
    <include refid="Base_Column_List"/>
    FROM users
    WHERE username = #{username}
  </select>
</mapper>